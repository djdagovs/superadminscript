#!/bin/bash

ifconfig wlan0 down

iwconfig wlan0 mode monitor

macchanger -m 00:11:22:33:44:11 wlan0

ifconfig wlan0 up

echo Se ha puesto wlan0 en modo monitor con la mac 00:11:22:33:44:11
sleep 2s

echo ..dentro de 4 seg se inicia el script patrocinado por NZ-Creaciones


echo
echo

echo Script creado por NZ-Creaciones para meter la interfaz wlan0 en modo monitor y cambiar la dirección mac automaticamente


sleep 2s

airmon-ng start wlan0


echo levantando modo monitor


ifconfig mon0 down


echo down modo monitor mediante ifconf


macchanger -a mon0

echo cambiando mac en -a automatico


ifconfig mon0 up

echo
echo volviendo a levantar modo monitor ya con la dirección MAC cambiada
echo
 

ifconfig

echo Todo ha terminado correcto, NZ-Creaciones te ayudó con este script
